<TableAllWindow>:
    BoxLayout:
		id: all_table_layout
        orientation: 'vertical'
        Button:
            text: '<--Назад в предыдущее меню'
            size_hint: (1, None)
            height: '50'
            font_size: '45'

            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'main_menu'
				root.remove_table()

        TextInput:
            id: input_det
            font_size: '55'
            hint_text: 'номер или дата(гггг-мм-дд)'
            size_hint: (1, None)
            height: '95'
            multiline: False

        Button:
			text: 'Смотреть по детали'
			size_hint: (1, None)
			height: '95'
			font_size: '50'
			on_press:
				root.manager.transition.direction = 'left'
		    	root.manager.current = 'table_det'
                root.remove_table()
        Button:
            text: 'Смотреть по дате'
            size_hint: (1, None)
            height: '95'
            font_size: '50'
            on_press:
		        root.manager.transition.direction = 'left'
		    	root.manager.current = 'table_date'
                root.remove_table()
        Button:
			text: 'Удалить данные'
            size_hint: (1, None)
            height: '95'
            font_size: '50'
            on_press:
		        root.manager.transition.direction = 'left'
		    	root.manager.current = 'delete_string'
                root.remove_table()

