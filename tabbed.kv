<Main>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'из БП'
        BoxLayout:
            orientation: 'vertical'

            TextInput:
                id: number_detail
                font_size: '25'
                hint_text: 'Номер детали'
                size_hint: (1, None)
                height: 40
                multiline: False
                input_filter: 'float'
                
            Spinner:
                id: name_detail
                text: 'Наименование'
                values: 'Букса', 'Вилка', 'Голова штока', 'Голова цилиндра', 'Поршень', 'Тех.узел', 'Труба защитная', 'Труба цилиндра', 'Фланец', 'Цилиндр', 'Шайба', 'Шток'
                size_hint: (None, None)
                font_size: '22'
                pos_hint: {'center_x': .5}
                size: 400, 44
                
            TextInput:
                id: quantity
                font_size: '25'
                hint_text: 'Количество'
                size_hint: (1, None)
                height: 40
                multiline: False
                input_filter: 'int'

            TextInput:
                id: comment
                font_size: '25'
                hint_text: 'Комментарий'
                size_hint: (1, None)
                height: 40
                multiline: False

            Button:
                text: 'Из Пикино'
                font_size: '25'
                on_press: root.btn_add_press()
                size_hint: (1, None)
                height: 260

            Button:
                text: 'exit'
                font_size: '25'
                on_press: quit()
                size_hint: (1, None)
                height: 210


